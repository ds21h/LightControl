<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/lstServers"
        tools:listitem="@android:layout/simple_expandable_list_item_2"
        android:layout_weight="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnNew"
        android:src="@mipmap/server_plus"
        android:layout_gravity="right"
        android:onClick="sNewServer"
        android:contentDescription="@string/title_newserver"
        android:contextClickable="true" />

</LinearLayout>